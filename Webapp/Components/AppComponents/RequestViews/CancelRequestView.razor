        <RadzenButton Text="Submit Cancellation" Click="@this.SubmitHandler"/>
        <RadzenButton Text="Cancel Cancellation" Click="@this.CancelHandler"/>
    </RadzenStack>
    <RadzenFormField Text="Cancellation Reason(Optional)">
        <RadzenTextArea Placeholder="Enter any cancellation reason"
                        @bind-Value="@this.AdditionalComments"
                        Style="width: 200px; height:100px;"/>
