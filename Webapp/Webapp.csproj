<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        
        <ContainerRegistry>docker.io</ContainerRegistry>
        <ContainerRepository>aelmendorf234/purchase-request</ContainerRepository>
        <ContainerImageTag>dev</ContainerImageTag>
    </PropertyGroup>


    <ItemGroup>
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
      <Content Update="wwwroot\EmailTemplateV2\EmailTemplateV2.htm">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
        <ContainerLabel Include="com.centurylinklabs.watchtower.enable" Value="true" />
        <ContainerPort Include="80" Type="tcp" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Radzen.Blazor" Version="5.1.8" />
        <PackageReference Include="SETiAuth.Domain.Shared" Version="1.3.6" />
        <PackageReference Include="Aspire.MongoDB.Driver" Version="8.2.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Domain\Domain.csproj" />
      <ProjectReference Include="..\Infrastructure\Infrastructure.csproj" />
    </ItemGroup>

</Project>
