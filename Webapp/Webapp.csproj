<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        
        <ContainerRegistry>docker.io</ContainerRegistry>
        <ContainerRepository>aelmendorf234/purchase-request</ContainerRepository>
        <ContainerImageTag>dev</ContainerImageTag>
    </PropertyGroup>


    <ItemGroup>
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
      <Content Update="wwwroot\EmailTemplateV2\EmailTemplateV2.htm">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
        <ContainerLabel Include="com.centurylinklabs.watchtower.enable" Value="true" />
        <ContainerPort Include="80" Type="tcp" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Blazor.Bootstrap" Version="3.0.0" />
        <PackageReference Include="DevExpress.Blazor.PdfViewer" Version="24.2.1-alpha-24260" />
        <PackageReference Include="DevExpress.Blazor.RichEdit" Version="24.2.1-alpha-24260" />
        <PackageReference Include="Blazored.LocalStorage" Version="4.5.0" />
        <PackageReference Include="DevExpress.Pdf.SkiaRenderer" Version="24.2.1-alpha-24260" />
        <PackageReference Include="MongoDB.Driver" Version="2.29.0" />
        <PackageReference Include="Radzen.Blazor" Version="5.2.12" />
        <PackageReference Include="SETiAuth.Domain.Shared" Version="1.3.6" />
        <PackageReference Include="SETiFileClient" Version="1.3.16" />
        <PackageReference Include="System.Linq.Dynamic.Core" Version="1.4.6" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Domain\Domain.csproj" />
      <ProjectReference Include="..\Infrastructure\Infrastructure.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Temp\" />
      <Folder Include="wwwroot\temp\" />
    </ItemGroup>

</Project>
